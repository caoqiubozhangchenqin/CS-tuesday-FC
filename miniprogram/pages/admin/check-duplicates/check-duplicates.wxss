/* 检查重复书籍页面样式 */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}

/* 头部 */
.header {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2d3748;
  display: block;
  margin-bottom: 20rpx;
}

.message {
  font-size: 28rpx;
  color: #718096;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 100rpx;
}

.loading-text {
  font-size: 32rpx;
  color: #667eea;
}

/* 无重复书籍 */
.no-duplicates {
  text-align: center;
  padding: 100rpx 40rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.no-duplicates-text {
  font-size: 32rpx;
  color: #48bb78;
  font-weight: bold;
}

/* 重复书籍容器 */
.duplicates-container {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

/* 摘要 */
.summary {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e2e8f0;
}

.summary-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #2d3748;
}

.cleanup-btn {
  background: linear-gradient(135deg, #ff6b6b, #ee5a6f);
  color: white;
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  border: none;
}

/* 重复书籍项目 */
.duplicate-item {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx solid #e2e8f0;
}

.duplicate-item:last-child {
  margin-bottom: 0;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.book-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2d3748;
}

.count-badge {
  background: #667eea;
  color: white;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

/* 书籍详情 */
.book-details {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
}

.book-info {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #f7fafc;
  border-radius: 8rpx;
  border-left: 4rpx solid #667eea;
}

.book-info:last-child {
  margin-bottom: 0;
}

.book-row {
  display: flex;
  margin-bottom: 8rpx;
  align-items: center;
}

.book-row:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 26rpx;
  color: #718096;
  min-width: 140rpx;
  font-weight: 500;
}

.value {
  font-size: 26rpx;
  color: #2d3748;
  flex: 1;
}

.status {
  font-size: 26rpx;
  font-weight: bold;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.status.readable {
  background: #c6f6d5;
  color: #22543d;
}

.status.unreadable {
  background: #fed7d7;
  color: #742a2a;
}