/* 管理员上传小说页面样式（美化版） */
.container {
  padding: 20px;
  background: transparent !important;
}

/* 添加渐变背景 */
body {
  background: linear-gradient(to bottom, #f0f8ff, #e6e6fa);
}

/* 标题样式 - 与排行榜页面一致 */
.title {
  font-size: 2rem;
  font-weight: bold;
  text-align: center;
  margin: 0 0 20rpx; /* 减少上方空白 */
  color: #4b0082;
  text-shadow: 1px 1px 2px #fff;
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.9), rgba(255, 165, 0, 0.85));
  padding: 40rpx;
  border-radius: 24rpx;
  box-shadow: 0 8px 16px rgba(255, 165, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.title-icon {
  font-size: 56rpx;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.form {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
}

/* 文件信息卡片 */
.file-info {
  background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
  border-radius: 20rpx;
  padding: 0;
  margin-bottom: 30rpx;
  overflow: hidden;
  border: 2rpx solid rgba(102, 126, 234, 0.1);
}

.file-info-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx 30rpx;
}

.info-title {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

.info-row {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.info-row:last-child {
  border-bottom: none;
}

.info-row .label {
  font-size: 28rpx;
  color: #666;
  min-width: 120rpx;
  font-weight: 500;
}

.info-row .value {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  flex: 1;
  word-break: break-all;
}

/* 选择文件按钮 */
.choose-btn {
  width: 100%;
  height: 100rpx;
  background: white;
  border: 3rpx dashed #667eea;
  border-radius: 20rpx;
  font-size: 32rpx;
  color: #667eea;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.choose-btn:active {
  transform: scale(0.98);
  background: rgba(102, 126, 234, 0.05);
}

.btn-icon {
  font-size: 40rpx;
}

.btn-text {
  font-weight: 500;
}

/* 优化按钮样式 */
button {
  border-radius: 12px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: transform 0.2s;
}

button:hover {
  transform: scale(1.05);
}

/* 上传按钮 */
.upload-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
  border: none;
  margin-top: 10rpx;
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  transition: all 0.3s ease;
}

.upload-btn:active {
  transform: scale(0.98);
  box-shadow: 0 5rpx 20rpx rgba(102, 126, 234, 0.3);
}

.upload-btn[disabled] {
  background: linear-gradient(135deg, #ccc, #999);
  opacity: 0.6;
  box-shadow: none;
}

.loading-icon {
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 已上传小说列表 */
.novel-list-section {
  margin-top: 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 15rpx 40rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(102, 126, 234, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 3rpx solid rgba(102, 126, 234, 0.15);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2d3748;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.section-count {
  font-size: 26rpx;
  color: #a0aec0;
  background: rgba(102, 126, 234, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

/* 加载状态 */
.list-loading {
  text-align: center;
  padding: 80rpx 40rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e2e8f0 100%);
  border-radius: 20rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.1);
}

.loading-icon {
  font-size: 60rpx;
  display: block;
  margin-bottom: 20rpx;
  animation: spin 1.5s linear infinite;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.loading-text {
  font-size: 28rpx;
  color: #718096;
  font-weight: 500;
}

/* 小说列表 */
.novel-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.novel-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(102, 126, 234, 0.08);
  transition: all 0.3s ease;
  margin-bottom: 16rpx;
}

.novel-card:active {
  transform: translateY(-1rpx);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  border-color: rgba(102, 126, 234, 0.12);
}

.novel-content {
  flex: 1;
  min-width: 0;
}

.novel-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2d3748;
  display: block;
  margin-bottom: 8rpx;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.novel-time {
  font-size: 24rpx;
  color: #718096;
  display: block;
}

.novel-actions {
  margin-left: 20rpx;
  flex-shrink: 0;
}

.delete-btn {
  width: 120rpx;
  height: 60rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 26rpx;
  border-radius: 8rpx;
  border: 1rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.delete-btn:active {
  background: #e8e8e8;
  transform: scale(0.95);
}

/* 空状态 */
.list-empty {
  text-align: center;
  padding: 80rpx 40rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e2e8f0 100%);
  border-radius: 20rpx;
  border: 2rpx dashed rgba(102, 126, 234, 0.2);
}

.empty-icon {
  font-size: 100rpx;
  display: block;
  margin-bottom: 20rpx;
  opacity: 0.5;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.empty-text {
  font-size: 30rpx;
  color: #718096;
  font-weight: 500;
}

/* 自定义删除确认弹窗 */
.delete-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  background: white;
  border-radius: 20rpx;
  padding: 0;
  width: 80%;
  max-width: 600rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  animation: modalFadeIn 0.3s ease-out;
}

@keyframes modalFadeIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.modal-header {
  background: linear-gradient(135deg, #ff6b6b, #ee5a6f);
  padding: 40rpx 30rpx;
  border-radius: 20rpx 20rpx 0 0;
  text-align: center;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.modal-body {
  padding: 40rpx 30rpx;
  text-align: center;
}

.modal-message {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.modal-warning {
  display: block;
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.cancel-btn:active {
  background: #e8e8e8;
  transform: scale(0.98);
}

.confirm-btn {
  background: linear-gradient(135deg, #ff6b6b, #ee5a6f);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

.confirm-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
}
