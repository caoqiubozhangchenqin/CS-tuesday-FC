/* 页面总容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  min-height: 100vh;
  padding: 40rpx 60rpx;
  box-sizing: border-box;
  background: linear-gradient(180deg, #FFF5F5 0%, #FFE4E1 100%);
  color: #333;
}

/* 主菜单容器样式 */
.main-container {
  justify-content: flex-start;
}

/* 夺冠庆祝横幅 */
.champion-banner {
  width: 100%;
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, rgba(220, 20, 60, 0.95) 0%, rgba(178, 34, 52, 0.9) 100%);
  border-radius: 20rpx 40rpx 20rpx 40rpx;
  border: 6rpx solid #DC143C;
  box-shadow: 
    0 8px 0 rgba(220, 20, 60, 0.6),
    0 4px 0 rgba(220, 20, 60, 0.4),
    inset 0 2px 0 rgba(255, 255, 255, 0.4);
  animation: championGlow 2s ease-in-out infinite alternate;
}

.champion-text {
  display: block;
  font-size: 42rpx;
  font-weight: 900;
  color: #fff;
  text-shadow: 
    2px 2px 0 #DC143C,
    4px 4px 0 rgba(0, 0, 0, 0.3);
  margin-bottom: 10rpx;
  letter-spacing: 4rpx;
}

.champion-subtitle {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #fff;
  text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.5);
  letter-spacing: 2rpx;
}

@keyframes championGlow {
  0% { 
    box-shadow: 
      0 8px 0 rgba(220, 20, 60, 0.6),
      0 4px 0 rgba(220, 20, 60, 0.4),
      inset 0 2px 0 rgba(255, 255, 255, 0.4),
      0 0 20px rgba(220, 20, 60, 0.3);
  }
  100% { 
    box-shadow: 
      0 8px 0 rgba(220, 20, 60, 0.6),
      0 4px 0 rgba(220, 20, 60, 0.4),
      inset 0 2px 0 rgba(255, 255, 255, 0.4),
      0 0 30px rgba(220, 20, 60, 0.6);
  }
}

