/* 【修改点】音乐图标，移至右上角 */
.music-icon-wrapper {
  position: fixed;
  /* 调整 top 和 right 值让它位于右上角合适的位置 */
  top: 120rpx; 
  right: 40rpx;
  width: 90rpx;
  height: 90rpx;
  z-index: 990;
  transform-origin: center;
}
.music-icon {
  width: 100%;
  height: 100%;
}
.music-icon-wrapper.playing {
  animation: spin 3s linear infinite;
}
@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}


