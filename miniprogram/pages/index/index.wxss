/* 冠军主题按钮组装饰 */
.button-group {
  position: relative;
}

.button-group::before {
  content: '⭐⭐⭐';
  position: absolute;
  top: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 24rpx;
  color: #FFD700;
  text-shadow: 0 0 10px rgba(255, 215, 0, 0.8);
  animation: starsTwinkle 3s ease-in-out infinite;
  z-index: 1;
}

.button-group::after {
  content: '⚽';
  position: absolute;
  bottom: -15rpx;
  right: 20rpx;
  font-size: 20rpx;
  color: #FFD700;
  text-shadow: 0 0 8px rgba(255, 215, 0, 0.6);
  animation: ballBounce 4s ease-in-out infinite;
  z-index: 1;
}

@keyframes starsTwinkle {
  0%, 100% { opacity: 0.6; transform: translateX(-50%) scale(1); }
  50% { opacity: 1; transform: translateX(-50%) scale(1.1); }
}

@keyframes ballBounce {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  25% { transform: translateY(-5rpx) rotate(90deg); }
  50% { transform: translateY(0) rotate(180deg); }
  75% { transform: translateY(-3rpx) rotate(270deg); }
}

/* 【冠军主题】手绘漫画风格按钮基础样式 */
.menu-button {
  width: 100%;
  height: 130rpx;
  margin-bottom: 35rpx;
  border-radius: 50rpx 20rpx 50rpx 20rpx;
  font-size: 38rpx;
  font-weight: 900;
  box-shadow: 
    0 8px 0 rgba(0, 0, 0, 0.4),
    0 4px 0 rgba(0, 0, 0, 0.3),
    inset 0 2px 0 rgba(255, 255, 255, 0.4);
  transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: normal;
  padding: 0;
  position: relative;
  overflow: hidden;
  letter-spacing: 2rpx;
  border: 6rpx solid #000;
  text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.5);
  transform: translateY(0);
  opacity: 0.9;
  backdrop-filter: blur(5px);
  /* 磨砂玻璃透明底 */
  background: rgba(255, 255, 255, 0.1);
  color: #FFFFFF;
}

.menu-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.2) 50%, transparent 70%);
  transform: translateX(-100%);
  transition: transform 0.3s ease;
}

.menu-button:active::before {
  transform: translateX(100%);
}

.menu-button::after { 
  border: none; 
}

.menu-button:active {
  transform: translateY(6rpx) scale(0.95);
  box-shadow: 
    0 2px 0 rgba(0, 0, 0, 0.4),
    0 1px 0 rgba(0, 0, 0, 0.3),
    inset 0 1px 0 rgba(255, 255, 255, 0.2);
  opacity: 0.8;
}

/* 手绘风格悬停效果 */
.menu-button:hover {
  transform: translateY(-3rpx) scale(1.02) rotate(1deg);
  box-shadow: 
    0 11px 0 rgba(0, 0, 0, 0.4),
    0 5px 0 rgba(0, 0, 0, 0.3),
    inset 0 2px 0 rgba(255, 255, 255, 0.4);
  opacity: 1;
}

/* 漫画风格动画效果 */
@keyframes mangaBounce {
  0% { transform: translateY(0); }
  50% { transform: translateY(-5rpx); }
  100% { transform: translateY(0); }
}

.menu-button:active {
  animation: mangaBounce 0.1s ease-in-out;
}

/* 漫画风格装饰效果 */
.menu-button::after {
  content: '⚡';
  position: absolute;
  top: 10rpx;
  right: 15rpx;
  font-size: 24rpx;
  opacity: 0;
  transition: opacity 0.2s ease;
  animation: sparkle 1s infinite;
}

@keyframes sparkle {
  0%, 100% { opacity: 0; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.2); }
}

.menu-button:hover::after {
  opacity: 1;
}

