/* pages/index/index.wxss */

/* 页面总容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  min-height: 100vh;
  padding: 40rpx 60rpx;
  box-sizing: border-box;
  background: linear-gradient(180deg, #f4f8ff 0%, #ffffff 100%);
  color: #333;
}

/* 主菜单容器样式 */
.main-container {
  justify-content: flex-start;
}

/* 欢迎语区域 */
.welcome-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20rpx;
  margin-bottom: 60rpx;
}
.welcome-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}
.welcome-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  text-shadow: 
    0 0 10px rgba(0, 0, 0, 0.8),
    0 0 20px rgba(0, 0, 0, 0.6),
    2px 2px 4px rgba(0, 0, 0, 0.9);
}
.login-prompt-btn {
  margin-top: 20rpx;
  background-color: #2ecc71;
  color: white;
  font-size: 30rpx;
  border-radius: 40rpx;
  padding: 10rpx 50rpx;
  line-height: 1.5;
}
.login-prompt-btn::after { border: none; }

/* 功能按钮组 */
.button-group {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 允许全局背景组件透出 */
.container {
  background: transparent !important;
}

/* 为欢迎区域添加半透明背景 */
.welcome-header {
  background-color: transparent !important;
  padding: 40rpx;
  border-radius: 24rpx;
}

/* 为按钮组添加半透明背景 */
.button-group {
  background-color: transparent !important;
  padding: 30rpx;
  border-radius: 20rpx;
}

/* 用户身价显示 */
.user-value-display {
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.9), rgba(255, 193, 7, 0.8));
  border-radius: 30rpx 15rpx 30rpx 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  text-align: center;
  border: 4rpx solid #000;
  box-shadow: 
    0 12px 24px rgba(255, 215, 0, 0.4),
    0 6px 12px rgba(0, 0, 0, 0.1),
    inset 0 2px 0 rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10px);
}

.value-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.value-amount {
  display: block;
  font-size: 48rpx;
  font-weight: 900;
  color: #000;
  text-shadow: 2px 2px 0 rgba(255, 255, 255, 0.5);
  margin-bottom: 15rpx;
}

.team-info {
  display: block;
  font-size: 24rpx;
  color: #666;
  font-weight: 600;
}

/* HERE WE GO 按钮特殊样式 */
.here-we-go-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%) !important;
  animation: hereWeGoPulse 2s ease-in-out infinite;
  font-size: 38rpx !important;
  font-weight: 900 !important;
  text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.3);
}

@keyframes hereWeGoPulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

/* 分组标题样式 */
.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  letter-spacing: 2rpx;
}

.section-title:first-child {
  margin-top: 0;
}

/* 【修改点】手绘漫画风格按钮基础样式 */
.menu-button {
  width: 100%;
  height: 130rpx;
  margin-bottom: 35rpx;
  border-radius: 50rpx 20rpx 50rpx 20rpx;
  font-size: 38rpx;
  font-weight: 900;
  box-shadow: 
    0 8px 0 rgba(0, 0, 0, 0.4),
    0 4px 0 rgba(0, 0, 0, 0.3),
    inset 0 2px 0 rgba(255, 255, 255, 0.4);
  transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: normal;
  padding: 0;
  position: relative;
  overflow: hidden;
  letter-spacing: 2rpx;
  border: 6rpx solid #000;
  text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.3);
  transform: translateY(0);
  opacity: 0.9;
  backdrop-filter: blur(5px);
}

.menu-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.2) 50%, transparent 70%);
  transform: translateX(-100%);
  transition: transform 0.3s ease;
}

.menu-button:active::before {
  transform: translateX(100%);
}

.menu-button::after { 
  border: none; 
}

.menu-button:active {
  transform: translateY(6rpx) scale(0.95);
  box-shadow: 
    0 2px 0 rgba(0, 0, 0, 0.4),
    0 1px 0 rgba(0, 0, 0, 0.3),
    inset 0 1px 0 rgba(255, 255, 255, 0.2);
  opacity: 0.8;
}

/* 手绘风格悬停效果 */
.menu-button:hover {
  transform: translateY(-3rpx) scale(1.02) rotate(1deg);
  box-shadow: 
    0 11px 0 rgba(0, 0, 0, 0.4),
    0 5px 0 rgba(0, 0, 0, 0.3),
    inset 0 2px 0 rgba(255, 255, 255, 0.4);
  opacity: 1;
}

/* 漫画风格动画效果 */
@keyframes mangaBounce {
  0% { transform: translateY(0); }
  50% { transform: translateY(-5rpx); }
  100% { transform: translateY(0); }
}

.menu-button:active {
  animation: mangaBounce 0.1s ease-in-out;
}

/* 漫画风格装饰效果 */
.menu-button::after {
  content: '⚡';
  position: absolute;
  top: 10rpx;
  right: 15rpx;
  font-size: 24rpx;
  opacity: 0;
  transition: opacity 0.2s ease;
  animation: sparkle 1s infinite;
}

@keyframes sparkle {
  0%, 100% { opacity: 0; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.2); }
}

.menu-button:hover::after {
  opacity: 1;
}

