/* pages/novel/search/search.wxss */
.container {
  min-height: 100vh;
  /* 使用全局背景 */
  padding: 30rpx;
}

/* 搜索头部 */
.search-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50rpx;
  padding: 0 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.clear-icon {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx;
}

.search-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.search-btn text {
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}

/* 搜索历史 */
.history-section {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.history-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.clear-history {
  font-size: 26rpx;
  color: #999;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.history-item {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-icon {
  font-size: 120rpx;
  animation: bounce 1s infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
  margin-top: 30rpx;
}

/* 搜索结果 */
.result-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-count {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 10rpx;
  padding: 0 10rpx;
}

.book-card {
  display: flex;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.book-cover {
  width: 120rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.book-cover image {
  width: 100%;
  height: 100%;
}

.no-cover {
  font-size: 60rpx;
  color: rgba(255, 255, 255, 0.8);
}

.book-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding-right: 120rpx;
}

.book-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.book-author {
  font-size: 24rpx;
  color: #888;
}

.book-intro {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.add-btn {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 16rpx 32rpx;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.add-btn.in-shelf {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

.add-btn text {
  color: #fff;
  font-size: 24rpx;
  font-weight: 500;
  white-space: nowrap;
}

/* 空状态 */
.empty-state,
.initial-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon,
.initial-icon {
  font-size: 160rpx;
  opacity: 0.3;
  margin-bottom: 40rpx;
}

.empty-text,
.initial-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 20rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
}
