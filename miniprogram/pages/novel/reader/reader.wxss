/* 右侧悬浮菜单按钮 */
.floating-menu-btn {
  position: fixed;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(102, 126, 234, 0.9);
  backdrop-filter: blur(10rpx);
  border-radius: 50%;
  z-index: 99;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s;
}

.floating-menu-btn:active {
  transform: translateY(-50%) scale(0.9);
  background: rgba(102, 126, 234, 1);
}

.floating-menu-btn .menu-icon {
  font-size: 48rpx;
  color: #fff;
  font-weight: bold;
}

/* 主题配置 */
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  transition: background-color 0.3s;
}

/* 默认主题 - 白色 */
.theme-white {
  background-color: #ffffff;
  color: #333333;
}

/* 护眼主题 - 淡绿 */
.theme-green {
  background-color: #c7edcc;
  color: #2d4a2b;
}

/* 羊皮纸主题 - 米黄 */
.theme-paper {
  background-color: #f4ecd8;
  color: #5c4a3c;
}

/* 夜间主题 - 黑色 */
.theme-night {
  background-color: #1a1a1a;
  color: #b0b0b0;
}

/* 顶部标题栏（简化版）*/
.header {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 120rpx;
  background: rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(10rpx);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  animation: slideDown 0.3s;
}

@keyframes slideDown {
  from { transform: translateY(-100%); }
  to { transform: translateY(0); }
}

.header-center {
  flex: 1;
  text-align: center;
}

.book-title {
  font-size: 32rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 内容区域 */
.content-scroll {
  flex: 1;
  height: 100%;
}

.content-container {
  padding: 60rpx 40rpx 120rpx;
  min-height: 100%;
}

.chapter-title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 60rpx;
  line-height: 1.5;
}

.chapter-content {
  font-size: 32rpx;
  line-height: 2;
  text-align: justify;
  letter-spacing: 1rpx;
  white-space: pre-wrap;  /* 保留换行和空格 */
  word-wrap: break-word;   /* 自动换行 */
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-icon {
  font-size: 120rpx;
  animation: bounce 1s infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

.loading-text {
  font-size: 28rpx;
  margin-top: 30rpx;
  opacity: 0.6;
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.error-icon {
  font-size: 120rpx;
  opacity: 0.3;
}

.error-text {
  font-size: 28rpx;
  margin: 30rpx 0;
  opacity: 0.6;
}

.retry-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  color: #fff;
  font-size: 28rpx;
}

/* 章节导航 */
.chapter-nav {
  display: flex;
  justify-content: space-between;
  margin-top: 80rpx;
  padding-top: 60rpx;
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
}

.theme-night .chapter-nav {
  border-top-color: rgba(255, 255, 255, 0.1);
}

.nav-btn {
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 28rpx;
}

.nav-btn.disabled {
  background: #e0e0e0;
  color: #999;
}

/* 底部菜单 */
.bottom-menu {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  transform: translateY(100%);
  transition: transform 0.3s;
  z-index: 100;
  /* 关键：适配底部安全区域 */
  padding-bottom: calc(25rpx + env(safe-area-inset-bottom));
}

.bottom-menu.show {
  transform: translateY(0);
}

.theme-night .bottom-menu {
  background: #2a2a2a;
}

.progress-section {
  padding: 20rpx 40rpx 15rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 15rpx;
}

.progress-slider {
  width: 100%;
}

/* 简化为单行3列布局 */
.menu-actions {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx 0 15rpx;
  border-top: 1rpx solid #f0f0f0;
}

.theme-night .menu-actions {
  border-top-color: #404040;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  padding: 15rpx 30rpx;
  flex: 1;
  transition: all 0.2s;
}

.action-item:active {
  background: rgba(0, 0, 0, 0.05);
  border-radius: 20rpx;
}

.theme-night .action-item:active {
  background: rgba(255, 255, 255, 0.1);
}

.action-icon {
  font-size: 52rpx;
}

.action-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.theme-night .action-label {
  color: #999;
}

/* 章节列表抽屉 */
.drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 200;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
}

.drawer-mask.show {
  opacity: 1;
  pointer-events: auto;
}

.chapter-drawer {
  position: fixed;
  right: 0;
  top: 0;
  bottom: 0;
  width: 600rpx;
  background: #fff;
  box-shadow: -4rpx 0 20rpx rgba(0, 0, 0, 0.1);
  transform: translateX(100%);
  transition: transform 0.3s;
  z-index: 201;
  display: flex;
  flex-direction: column;
}

.chapter-drawer.show {
  transform: translateX(0);
}

.theme-night .chapter-drawer {
  background: #2a2a2a;
}

.drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.theme-night .drawer-header {
  border-bottom-color: #404040;
}

.drawer-title {
  font-size: 32rpx;
  font-weight: 600;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f5f5f5;
}

.theme-night .close-btn {
  background: #404040;
}

.close-btn text {
  font-size: 36rpx;
  color: #999;
}

.chapter-list {
  flex: 1;
  height: 100%;
}

.chapter-item {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.2s;
}

.theme-night .chapter-item {
  border-bottom-color: #3a3a3a;
}

.chapter-item.active {
  background: linear-gradient(90deg, rgba(102, 126, 234, 0.1) 0%, transparent 100%);
}

.chapter-number {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
  min-width: 60rpx;
}

.chapter-name {
  flex: 1;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.chapter-item.active .chapter-name {
  color: #667eea;
  font-weight: 600;
}

/* 滚动提示 */
.next-chapter-hint {
  text-align: center;
  padding: 80rpx 0 40rpx;
  font-size: 28rpx;
  color: #999;
  animation: float 2s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.end-hint {
  text-align: center;
  padding: 80rpx 0;
  font-size: 32rpx;
  color: #667eea;
  font-weight: 600;
}

/* 跳转弹窗 */
.jump-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: none;
  align-items: center;
  justify-content: center;
}

.jump-modal.show {
  display: flex;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: relative;
  width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  animation: modalSlideUp 0.3s;
}

@keyframes modalSlideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 40rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  padding: 40rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.chapter-input {
  width: 100%;
  padding: 20rpx 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 32rpx;
  text-align: center;
}

.chapter-input:focus {
  border-color: #667eea;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
  transition: background-color 0.2s;
}

.modal-btn.cancel {
  color: #999;
  border-right: 1rpx solid #f0f0f0;
}

.modal-btn.cancel:active {
  background: #f5f5f5;
}

.modal-btn.confirm {
  color: #667eea;
  font-weight: 600;
}

.modal-btn.confirm:active {
  background: rgba(102, 126, 234, 0.1);
}

/* 进度条样式优化 */
.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #e0e0e0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-top: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  transition: width 0.3s;
}

/* 内容文本样式 */
.content-text {
  display: block;
  line-height: 2.2;
  white-space: pre-wrap;   /* 保留换行和空格 */
  word-wrap: break-word;   /* 自动换行 */
  word-break: break-all;   /* 英文单词换行 */
}

/* 向上滚动提示（加载上一章）*/
.prev-chapter-hint {
  text-align: center;
  padding: 40rpx 0 20rpx;
  font-size: 28rpx;
  color: #999;
  animation: floatUp 2s ease-in-out infinite;
}

@keyframes floatUp {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(10rpx); }
}

/* 第一章提示 */
.start-hint {
  text-align: center;
  padding: 40rpx 0 20rpx;
  font-size: 28rpx;
  color: #667eea;
  opacity: 0.6;
}
