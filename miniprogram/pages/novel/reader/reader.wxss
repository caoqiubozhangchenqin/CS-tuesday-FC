/* 左侧悬浮菜单按钮 - 半透明白底，隐藏在侧面 */
.floating-menu-btn {
  position: fixed;
  left: -40rpx;  /* 隐藏大部分在左侧 */
  top: 50%;
  transform: translateY(-50%);
  width: 80rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.4);  /* 半透明白底 */
  backdrop-filter: blur(10rpx);
  border-radius: 0 20rpx 20rpx 0;  /* 只右侧有圆角 */
  z-index: 99;
  box-shadow: 2rpx 0 10rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.floating-menu-btn:active {
  left: 0rpx;  /* 点击时滑出 */
  background: rgba(255, 255, 255, 0.7);  /* 更明显 */
}

.floating-menu-btn .menu-icon {
  font-size: 36rpx;
  color: rgba(102, 126, 234, 0.8);
  font-weight: bold;
  margin-right: -10rpx;  /* 微调位置 */
}

/* 夜间模式下的菜单按钮 */
.theme-night .floating-menu-btn {
  background: rgba(50, 50, 50, 0.4);
}

.theme-night .floating-menu-btn:active {
  background: rgba(50, 50, 50, 0.7);
}

.theme-night .floating-menu-btn .menu-icon {
  color: rgba(176, 176, 176, 0.8);
}

/* 主题配置 */
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  transition: background-color 0.3s;
}

/* 默认主题 - 白色 */
.theme-white {
  background-color: #ffffff;
  color: #333333;
}

/* 护眼主题 - 淡绿 */
.theme-green {
  background-color: #c7edcc;
  color: #2d4a2b;
}

/* 羊皮纸主题 - 米黄 */
.theme-paper {
  background-color: #f4ecd8;
  color: #5c4a3c;
}

/* 夜间主题 - 黑色 */
.theme-night {
  background-color: #000000;
  color: #b0b0b0;
}

/* 顶部标题栏（简化版）*/
.header {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 120rpx;
  background: rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(10rpx);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  animation: slideDown 0.3s;
}

.theme-night .header {
  background: rgba(255, 255, 255, 0.05);  /* 夜间模式的头部背景 */
}

@keyframes slideDown {
  from { transform: translateY(-100%); }
  to { transform: translateY(0); }
}

.header-center {
  flex: 1;
  text-align: center;
}

.book-title {
  font-size: 32rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: inherit;  /* 继承主题颜色 */
}

.theme-night .book-title {
  color: #d0d0d0;  /* 夜间模式书名颜色 */
}

/* 内容区域 */
.content-scroll {
  flex: 1;
  height: 100%;
  background: transparent;  /* 透明背景，显示容器颜色 */
}

.content-container {
  padding: 60rpx 40rpx 120rpx;
  min-height: 100%;
  background: transparent;  /* 透明背景，显示容器颜色 */
}

.theme-night .content-scroll,
.theme-night .content-container {
  background-color: #000000;
}

.chapter-title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 60rpx;
  line-height: 1.5;
  color: inherit;  /* 继承主题颜色 */
}

.theme-night .chapter-title {
  color: #d0d0d0;  /* 夜间模式更亮的标题 */
}

.chapter-content {
  font-size: 32rpx;
  line-height: 2;
  text-align: justify;
  letter-spacing: 1rpx;
  white-space: pre-wrap;  /* 保留换行和空格 */
  word-wrap: break-word;   /* 自动换行 */
  color: inherit;  /* 继承主题颜色 */
}

.theme-night .chapter-content {
  color: #b0b0b0;  /* 夜间模式文本颜色 */
}

.theme-night .content-text {
  color: #b0b0b0;  /* 确保文本颜色应用 */
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-icon {
  font-size: 120rpx;
  animation: bounce 1s infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

.loading-text {
  font-size: 28rpx;
  margin-top: 30rpx;
  opacity: 0.6;
  color: inherit;  /* 继承主题颜色 */
}

.theme-night .loading-text {
  color: #b0b0b0;
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.error-icon {
  font-size: 120rpx;
  opacity: 0.3;
}

.error-text {
  font-size: 28rpx;
  margin: 30rpx 0;
  opacity: 0.6;
  color: inherit;  /* 继承主题颜色 */
}

.theme-night .error-text {
  color: #b0b0b0;
}

.retry-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  color: #fff;
  font-size: 28rpx;
}

/* 章节导航 */
.chapter-nav {
  display: flex;
  justify-content: space-between;
  margin-top: 80rpx;
  padding-top: 60rpx;
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
}

.theme-night .chapter-nav {
  border-top-color: rgba(255, 255, 255, 0.1);
}

.nav-btn {
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 28rpx;
}

.nav-btn.disabled {
  background: #e0e0e0;
  color: #999;
}

/* 底部菜单 */
.bottom-menu {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  transform: translateY(100%);
  transition: transform 0.3s;
  z-index: 100;
  /* 关键：适配底部安全区域 */
  padding-bottom: calc(25rpx + env(safe-area-inset-bottom));
}

.bottom-menu.show {
  transform: translateY(0);
}

.theme-night .bottom-menu {
  background: #2a2a2a;
}

/* 未完成解析提示 */
.incomplete-parse-hint {
  padding: 20rpx 40rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.incomplete-parse-hint .hint-text {
  display: flex;
  align-items: center;
  color: white;
  font-size: 26rpx;
}

.incomplete-parse-hint .icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.incomplete-parse-hint .continue-parse-btn {
  background: white;
  color: #ff6b6b;
  padding: 12rpx 28rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: all 0.2s;
}

.incomplete-parse-hint .continue-parse-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

/* 章节末尾解锁提示 */
.unlock-hint {
  margin-top: 60rpx;
  padding: 40rpx;
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(250, 112, 154, 0.3);
}

.unlock-icon {
  font-size: 64rpx;
  display: block;
  margin-bottom: 20rpx;
}

.unlock-text {
  font-size: 28rpx;
  color: #fff;
  display: block;
  margin-bottom: 30rpx;
  font-weight: 500;
}

.unlock-btn {
  background: white;
  color: #fa709a;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: inline-block;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s;
}

.unlock-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.progress-section {
  padding: 20rpx 40rpx 15rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 15rpx;
}

.progress-slider {
  width: 100%;
}

/* 书签列表 */
.bookmarks-section {
  padding: 15rpx 40rpx;
  border-top: 1rpx solid #f0f0f0;
}

.theme-night .bookmarks-section {
  border-top-color: #404040;
}

.section-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

.theme-night .section-title {
  color: #b0b0b0;
}

.bookmarks-list {
  white-space: nowrap;
  padding-bottom: 10rpx;
}

.bookmark-item {
  display: inline-block;
  background: #f5f5f5;
  padding: 15rpx 20rpx;
  border-radius: 15rpx;
  margin-right: 15rpx;
  position: relative;
  max-width: 200rpx;
}

.theme-night .bookmark-item {
  background: #404040;
}

.bookmark-item:active {
  transform: scale(0.95);
}

.bookmark-title {
  font-size: 24rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bookmark-note {
  font-size: 20rpx;
  color: #999;
  display: block;
  margin-top: 5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bookmark-delete {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  width: 30rpx;
  height: 30rpx;
  background: #ff4757;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #fff;
}

.bookmark-delete:active {
  transform: scale(0.9);
}

/* 改为4列布局 */
.menu-actions {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx 0 15rpx;
  border-top: 1rpx solid #f0f0f0;
}

.theme-night .menu-actions {
  border-top-color: #404040;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  padding: 15rpx 20rpx;
  flex: 1;
  transition: all 0.2s;
}

.action-item:active {
  background: rgba(0, 0, 0, 0.05);
  border-radius: 20rpx;
}

.theme-night .action-item:active {
  background: rgba(255, 255, 255, 0.1);
}

.action-icon {
  font-size: 48rpx;
}

.action-label {
  font-size: 22rpx;
  color: #666;
  font-weight: 500;
}

.theme-night .action-label {
  color: #999;
}

/* 章节列表抽屉 */
.drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 200;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
}

.drawer-mask.show {
  opacity: 1;
  pointer-events: auto;
}

.chapter-drawer {
  position: fixed;
  right: 0;
  top: 50rpx;
  bottom: 50rpx;
  width: 620rpx;
  background: #fff;
  box-shadow: -4rpx 0 20rpx rgba(0, 0, 0, 0.1);
  transform: translateX(100%);
  transition: transform 0.3s;
  z-index: 201;
  display: flex;
  flex-direction: column;
  border-radius: 20rpx 0 0 20rpx;  /* 左侧圆角 */
  overflow: hidden;  /* 防止内容溢出 */
}

.chapter-drawer.show {
  transform: translateX(0);
}

.theme-night .chapter-drawer {
  background: #2a2a2a;
}

.drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.theme-night .drawer-header {
  border-bottom-color: #404040;
}

.drawer-title {
  font-size: 32rpx;
  font-weight: 600;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f5f5f5;
}

.theme-night .close-btn {
  background: #404040;
}

.close-btn text {
  font-size: 36rpx;
  color: #999;
}

.chapter-list {
  flex: 1;
  height: 100%;
}

.chapter-item {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.2s;
}

.theme-night .chapter-item {
  border-bottom-color: #3a3a3a;
}

.chapter-item.active {
  background: linear-gradient(90deg, rgba(102, 126, 234, 0.1) 0%, transparent 100%);
}

.chapter-number {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
  min-width: 60rpx;
}

.chapter-name {
  flex: 1;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.chapter-item.active .chapter-name {
  color: #667eea;
  font-weight: 600;
}

/* 章节末尾提示（手动切换）*/
.chapter-end-hint {
  text-align: center;
  padding: 100rpx 40rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.hint-btn {
  padding: 20rpx 60rpx;
  background: transparent;  /* 无底色 */
  color: inherit;  /* 继承正文颜色 */
  border: 2rpx solid rgba(0, 0, 0, 0.15);  /* 淡边框 */
  border-radius: 50rpx;
  font-size: 28rpx;
  transition: all 0.2s;
}

.hint-btn:active {
  background: rgba(0, 0, 0, 0.05);  /* 点击时轻微背景 */
  border-color: rgba(0, 0, 0, 0.25);
  transform: scale(0.95);
}

.theme-night .hint-btn {
  color: #b0b0b0;  /* 夜间模式与正文一致 */
  border-color: rgba(255, 255, 255, 0.2);
}

.theme-night .hint-btn:active {
  background: rgba(255, 255, 255, 0.05);
  border-color: rgba(255, 255, 255, 0.3);
}

.end-hint {
  text-align: center;
  padding: 80rpx 0;
  font-size: 32rpx;
  color: #667eea;
  font-weight: 600;
}

.theme-night .end-hint {
  color: #8896e8;  /* 夜间模式下稍微亮一点 */
}

/* 章节列表抽屉 - 滑动模式（无分页）*/
.drawer-count {
  font-size: 24rpx;
  color: #999;
  padding: 15rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;  /* 防止压缩 */
}

.theme-night .drawer-count {
  color: #b0b0b0;
  border-bottom-color: #404040;
}

.chapter-list {
  flex: 1;
  width: 100%;
  overflow-y: auto;  /* 确保可滚动 */
}

/* 改为列表布局 */
.chapter-list-container {
  padding: 0;
}

.chapter-list-item {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;  /* 增加左右内边距 */
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.2s;
  gap: 15rpx;
}

.chapter-list-item:active {
  background: #f5f5f5;
}

.theme-night .chapter-list-item {
  border-bottom-color: #3a3a3a;
}

.theme-night .chapter-list-item:active {
  background: #3a3a3a;
}

.chapter-list-item.active {
  background: linear-gradient(90deg, rgba(102, 126, 234, 0.15) 0%, transparent 100%);
  border-left: 4rpx solid #667eea;
  padding-left: 26rpx;  /* 因为有左边框，所以减少4rpx以保持对齐 */
}

.chapter-number {
  font-size: 24rpx;
  color: #999;
  min-width: 50rpx;
  flex-shrink: 0;
}

.theme-night .chapter-number {
  color: #b0b0b0;
}

.chapter-name {
  flex: 1;
  font-size: 28rpx;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.chapter-list-item.active .chapter-name {
  color: #667eea;
  font-weight: 600;
}

.chapter-arrow {
  font-size: 32rpx;
  color: #ccc;
  flex-shrink: 0;
}

.theme-night .chapter-arrow {
  color: #666;
}

.chapter-list-item.active .chapter-arrow {
  color: #667eea;
}

/* 进度条样式优化 */
.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #e0e0e0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-top: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  transition: width 0.3s;
}

/* 书签弹窗 */
.bookmark-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 300;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
}

.bookmark-modal.show {
  opacity: 1;
  pointer-events: auto;
}

.bookmark-modal .modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  animation: modalSlideUp 0.3s;
}

.theme-night .bookmark-modal .modal-content {
  background: #2a2a2a;
}

.bookmark-info {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
}

.theme-night .bookmark-info {
  background: #404040;
}

.bookmark-chapter {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.bookmark-position {
  display: block;
  font-size: 26rpx;
  color: #666;
}

.theme-night .bookmark-position {
  color: #b0b0b0;
}

.bookmark-input {
  width: 100%;
  height: 120rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  line-height: 1.4;
}
