/* pages/novel/shelf/shelf.wxss */
page {
  background: transparent !important;
}

.container {
  min-height: 100vh;
  padding: 30rpx;
  padding-bottom: 80rpx;
  position: relative;
  z-index: 1;
}

/* 背景装饰 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  pointer-events: none;
  z-index: 0;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(102, 126, 234, 0.15);
  box-shadow: 0 0 40rpx rgba(102, 126, 234, 0.3);
  animation: float 20s ease-in-out infinite;
}

.bg-circle-1 {
  width: 400rpx;
  height: 400rpx;
  top: -100rpx;
  right: -100rpx;
  animation-delay: 0s;
}

.bg-circle-2 {
  width: 300rpx;
  height: 300rpx;
  bottom: 100rpx;
  left: -50rpx;
  animation-delay: 5s;
}

.bg-circle-3 {
  width: 200rpx;
  height: 200rpx;
  top: 40%;
  right: 10%;
  animation-delay: 10s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
    opacity: 0.3;
  }
  50% {
    transform: translateY(-30rpx) rotate(180deg);
    opacity: 0.6;
  }
}

/* 头部 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 35rpx 30rpx;
  position: relative;
  z-index: 1;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.95), rgba(118, 75, 162, 0.9));
  border-radius: 30rpx 15rpx 30rpx 15rpx;
  box-shadow: 
    0 12px 24px rgba(102, 126, 234, 0.4),
    0 6px 12px rgba(0, 0, 0, 0.1),
    inset 0 2px 0 rgba(255, 255, 255, 0.3);
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 
    0 4rpx 12rpx rgba(0, 0, 0, 0.3),
    2px 2px 0 rgba(0, 0, 0, 0.2);
  letter-spacing: 2rpx;
  flex: 1;
}

.upload-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s;
  flex-shrink: 0;
}

.upload-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.4);
}

.btn-icon {
  font-size: 32rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

/* 书籍列表 - 九宫格布局 */
.book-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  padding: 0 20rpx;
  position: relative;
  z-index: 1;
}

.book-card {
  display: flex;
  flex-direction: column;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(25rpx);
  border-radius: 24rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  position: relative;
  transition: all 0.3s;
  overflow: hidden;
  align-items: center;
  justify-content: center;
  min-height: 120rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.book-card:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

@keyframes badgeShimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.book-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  line-height: 1.4;
  word-break: break-word;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  overflow: hidden;
  width: 100%;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  position: relative;
  z-index: 1;
}

.loading-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
  animation: spin 1.5s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 0;
  animation: fadeIn 0.6s ease-in;
  position: relative;
  z-index: 1;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.empty-icon {
  font-size: 240rpx;
  opacity: 0.8;
  margin-bottom: 50rpx;
  filter: drop-shadow(0 4rpx 12rpx rgba(0, 0, 0, 0.1));
  animation: floatEmpty 4s ease-in-out infinite;
}

@keyframes floatEmpty {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-25rpx); }
}

.empty-text {
  font-size: 40rpx;
  color: #fff;
  margin-bottom: 20rpx;
  font-weight: 600;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.empty-hint {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 60rpx;
}

.empty-btn {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  padding: 28rpx 80rpx;
  border-radius: 50rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s;
}

.empty-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.35);
}

.empty-btn text {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}
