/* pages/novel/shelf/shelf.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  padding: 30rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 0 10rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.search-btn {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 16rpx 32rpx;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.search-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.search-text {
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
}

/* 书架列表 */
.book-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.book-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  position: relative;
  transition: all 0.3s;
}

.book-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.book-cover {
  width: 120rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.book-cover image {
  width: 100%;
  height: 100%;
}

.no-cover {
  font-size: 60rpx;
  color: rgba(255, 255, 255, 0.8);
}

.book-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.book-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.book-author {
  font-size: 24rpx;
  color: #888;
}

.book-progress {
  font-size: 24rpx;
  color: #667eea;
  margin-top: 4rpx;
}

.book-delete {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #ff6b6b;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.book-delete text {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 160rpx;
  opacity: 0.3;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 60rpx;
}

.empty-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.empty-btn text {
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
}
