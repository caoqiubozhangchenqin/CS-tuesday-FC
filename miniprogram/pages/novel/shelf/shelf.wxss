/* pages/novel/shelf/shelf.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  padding: 30rpx;
  padding-bottom: 80rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.title {
  font-size: 52rpx;
  font-weight: bold;
  color: #333;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.recommend-btn,
.search-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  transition: all 0.3s;
}

.recommend-btn {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
  box-shadow: 0 8rpx 20rpx rgba(250, 112, 154, 0.3);
}

.search-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.recommend-btn:active,
.search-btn:active {
  transform: scale(0.95);
}

.btn-icon {
  font-size: 36rpx;
  margin-bottom: 4rpx;
}

.btn-text {
  font-size: 22rpx;
  color: #fff;
  font-weight: 600;
}

/* 统计信息栏 */
.stats-bar {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-icon {
  font-size: 40rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.stat-label {
  font-size: 24rpx;
  color: #888;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: linear-gradient(to bottom, transparent, #ddd, transparent);
}

/* 书架列表 */
.book-list {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.book-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  position: relative;
  transition: all 0.3s;
  overflow: hidden;
}

.book-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.book-item:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.book-cover {
  width: 120rpx;
  height: 160rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
  position: relative;
}

.book-cover image {
  width: 100%;
  height: 100%;
}

.no-cover {
  font-size: 60rpx;
  color: rgba(255, 255, 255, 0.8);
}

.reading-badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
  color: #fff;
  font-size: 18rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.book-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  min-width: 0;
}

.book-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 4rpx;
}

.book-author {
  font-size: 24rpx;
  color: #888;
}

.book-progress {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 500;
}

.book-time {
  font-size: 22rpx;
  color: #aaa;
}

.book-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  flex-shrink: 0;
  margin-left: 16rpx;
}

.action-read {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.action-icon {
  font-size: 28rpx;
  margin-bottom: 4rpx;
}

.action-label {
  font-size: 20rpx;
  color: #fff;
  font-weight: 600;
}

.book-delete {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

.delete-icon {
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 0;
  animation: fadeIn 0.6s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.empty-icon {
  font-size: 200rpx;
  opacity: 0.4;
  margin-bottom: 40rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

.empty-text {
  font-size: 34rpx;
  color: #666;
  margin-bottom: 60rpx;
  font-weight: 500;
}

.empty-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 24rpx 80rpx;
  border-radius: 50rpx;
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s;
}

.empty-btn:active {
  transform: scale(0.95);
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.5);
}

.empty-btn text {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
}
