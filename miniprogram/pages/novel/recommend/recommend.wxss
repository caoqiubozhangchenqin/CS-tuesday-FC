/* pages/novel/recommend/recommend.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx;
  padding-bottom: 80rpx;
}

.header {
  text-align: center;
  padding: 40rpx 0;
  margin-bottom: 30rpx;
}

.title {
  display: block;
  font-size: 56rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 分类标签 */
.category-tabs {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.tab-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  transition: all 0.3s;
  flex-shrink: 0;
}

.tab-item.active {
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

.tab-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.tab-name {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

.tab-item.active .tab-name {
  color: #667eea;
  font-weight: 600;
}

/* 推荐列表 */
.recommend-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.book-card {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  position: relative;
  transition: all 0.3s;
  overflow: hidden;
}

.book-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.book-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.book-rank {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.book-cover {
  width: 100rpx;
  height: 130rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.cover-icon {
  font-size: 50rpx;
}

.book-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
}

.book-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.book-author {
  font-size: 24rpx;
  color: #888;
}

.book-intro {
  font-size: 24rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 1.4;
}

.book-tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
  margin-top: 8rpx;
}

.tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  font-size: 20rpx;
  color: #fff;
}

.book-action {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 16rpx;
  flex-shrink: 0;
}

.action-text {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.action-icon {
  font-size: 32rpx;
  color: #667eea;
  font-weight: bold;
}

/* 底部提示 */
.footer-tip {
  text-align: center;
  padding: 40rpx 0;
  margin-top: 20rpx;
}

.footer-tip text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}
