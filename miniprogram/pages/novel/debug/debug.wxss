/* pages/novel/debug/debug.wxss */
.debug-container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.debug-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.debug-title {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
}

.debug-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.config-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.config-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666;
  flex: 0 0 200rpx;
}

.value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
}

.value.success {
  color: #52c41a;
}

.value.warning {
  color: #faad14;
}

.search-input {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.test-btn {
  width: 100%;
  height: 80rpx;
  background: #f0f0f0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}

.test-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.test-btn:active {
  opacity: 0.8;
}

.result-box {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  border-left: 4rpx solid #667eea;
}

.result-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.result-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  display: block;
  white-space: pre-wrap;
  word-break: break-all;
}

.tip-box {
  padding: 20rpx;
  background: #fff7e6;
  border-radius: 12rpx;
  border: 1rpx solid #ffd591;
}

.tip-text {
  display: block;
  font-size: 26rpx;
  color: #ad6800;
  line-height: 2;
}
