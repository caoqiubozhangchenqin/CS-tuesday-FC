<bg overlayOpacity="0.3" blur="0" sizeMode="cover" repeat="false" />
<view class="container">
  <view class="title">
    <text class="title-icon">⚽</text>
    <text>Here We Go! 加入球队</text>
  </view>
  <view class="team-list">
    <block wx:for="{{teams}}" wx:key="_id">
      <view class="team-item {{item.isInterested ? 'selected' : ''}}">
        <view class="team-badge">
          <text class="badge-icon">👕</text>
        </view>
        <view class="team-info">
          <view class="team-name">
            <text>{{item.name}}</text>
            <text wx:if="{{item.isInterested}}" class="selected-badge">✔️</text>
          </view>
          <view class="team-value">
            <view class="value-item">
              <text class="value-label">💰 总身价</text>
              <text class="value-number">{{item.total_value}}</text>
              <text class="value-unit">万欧</text>
            </view>
            <view class="value-divider"></view>
            <view class="value-item">
              <text class="value-label">🎯 工资帽</text>
              <text class="value-number">{{item.salary_cap}}</text>
              <text class="value-unit">万欧</text>
            </view>
          </view>
        </view>
        
        <block wx:if="{{item.isInterested}}">
          <button 
            class="cancel-button" 
            bindtap="handleCancelJoinTeam" 
            data-team-id="{{item._id}}"
          >
            取消加入
          </button>
        </block>
        <block wx:else>
          <button 
            class="join-button" 
            bindtap="handleJoinTeam" 
            data-team-id="{{item._id}}"
            disabled="{{myInterestedTeams.length >= 1}}"
          >
            Here We Go
          </button>
        </block>
      </view>
    </block>
  </view>
  
  <view class="reset-button-container">
    <button 
      wx:if="{{myInterestedTeams.length >= 1}}"
      class="reset-button" 
      bindtap="handleResetSelections"
    >
      重新选择
    </button>
  </view>
</view>