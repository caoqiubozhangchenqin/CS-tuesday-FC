/* pages/community/community.wxss */
.container {
  padding: 30rpx 20rpx;
  background: transparent !important;
  min-height: 100vh;
}

/* 页面标题 */
.page-title {
  font-size: 48rpx;
  font-weight: 900;
  text-align: center;
  margin-bottom: 40rpx;
  color: #fff;
  text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.3);
  background: linear-gradient(135deg, rgba(102, 102, 102, 0.9), rgba(51, 51, 51, 0.85));
  padding: 40rpx;
  border-radius: 30rpx 15rpx 30rpx 15rpx;
  box-shadow: 
    0 12px 24px rgba(0, 0, 0, 0.4),
    0 6px 12px rgba(0, 0, 0, 0.1),
    inset 0 2px 0 rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  border: 4rpx solid #000;
  position: relative;
  overflow: hidden;
}

.title-icon {
  font-size: 52rpx;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8rpx); }
}

/* 发布留言区域 */
.post-section {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(248, 249, 250, 0.8));
  border-radius: 30rpx 15rpx 30rpx 15rpx;
  padding: 35rpx;
  margin-bottom: 30rpx;
  box-shadow: 
    0 10px 24px rgba(0, 0, 0, 0.15),
    0 4px 8px rgba(0, 0, 0, 0.1),
    inset 0 1px 0 rgba(255, 255, 255, 0.3);
  border: 4rpx solid #000;
  backdrop-filter: blur(10px);
}

.post-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 25rpx;
}

.post-icon {
  font-size: 36rpx;
}

.post-form {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.message-input {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 3rpx solid #ddd;
  border-radius: 20rpx;
  font-size: 28rpx;
  background: rgba(255, 255, 255, 0.9);
  box-sizing: border-box;
  resize: none;
}

.message-input:focus {
  border-color: #666;
  box-shadow: 0 0 0 2rpx rgba(102, 102, 102, 0.2);
}

.post-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.char-count {
  font-size: 24rpx;
  color: #999;
}

.post-btn {
  background: linear-gradient(135deg, #666666, #333333);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  font-weight: 700;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.post-btn:disabled {
  background: #ccc;
  color: #999;
  box-shadow: none;
}

/* 留言列表区域 */
.messages-section {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(248, 249, 250, 0.8));
  border-radius: 30rpx 15rpx 30rpx 15rpx;
  padding: 35rpx;
  box-shadow: 
    0 10px 24px rgba(0, 0, 0, 0.15),
    0 4px 8px rgba(0, 0, 0, 0.1),
    inset 0 1px 0 rgba(255, 255, 255, 0.3);
  border: 4rpx solid #000;
  backdrop-filter: blur(10px);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}

.section-header text:first-child {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.section-icon {
  font-size: 36rpx;
}

.sort-options {
  display: flex;
  gap: 15rpx;
}

.sort-btn {
  padding: 8rpx 16rpx;
  border-radius: 15rpx;
  font-size: 24rpx;
  background: #f0f0f0;
  color: #666;
  transition: all 0.3s ease;
}

.sort-btn.active {
  background: #666;
  color: white;
}

/* 留言卡片 */
.message-card {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #eee;
  transition: all 0.3s ease;
}

.message-card:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
}

.message-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 15rpx;
  flex: 1;
}

.user-avatar {
  font-size: 32rpx;
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #333;
}

.user-stats {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.user-value {
  font-size: 22rpx;
  color: #ff6b6b;
  font-weight: 600;
  background: rgba(255, 107, 107, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.user-team {
  font-size: 22rpx;
  color: #666;
  font-weight: 600;
  background: rgba(102, 102, 102, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.post-time {
  font-size: 22rpx;
  color: #999;
  white-space: nowrap;
}

.message-actions {
  display: flex;
  gap: 15rpx;
}

.like-btn, .reply-btn {
  display: flex;
  align-items: center;
  gap: 5rpx;
  padding: 8rpx 12rpx;
  border-radius: 15rpx;
  background: #f5f5f5;
  transition: all 0.3s ease;
}

.like-btn.liked {
  background: #ffebee;
  color: #e91e63;
}

.like-icon, .reply-icon {
  font-size: 24rpx;
}

.like-count {
  font-size: 22rpx;
  color: #666;
}

.message-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 15rpx;
}

/* 回复区域 */
.reply-section {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 15rpx;
  border: 1rpx solid #eee;
}

.reply-input {
  width: 100%;
  min-height: 80rpx;
  padding: 15rpx;
  border: 2rpx solid #ddd;
  border-radius: 15rpx;
  font-size: 26rpx;
  background: white;
  margin-bottom: 15rpx;
  box-sizing: border-box;
}

.reply-actions {
  display: flex;
  gap: 15rpx;
  justify-content: flex-end;
}

.reply-submit-btn, .reply-cancel-btn {
  padding: 10rpx 20rpx;
  border-radius: 15rpx;
  font-size: 24rpx;
  border: none;
}

.reply-submit-btn {
  background: #666;
  color: white;
}

.reply-cancel-btn {
  background: #f0f0f0;
  color: #666;
}

/* 回复列表 */
.replies-list {
  margin-top: 15rpx;
  padding-top: 15rpx;
  border-top: 1rpx solid #eee;
}

.reply-item {
  padding: 15rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
}

.reply-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.reply-user {
  font-size: 24rpx;
  font-weight: 600;
  color: #666;
}

.reply-time {
  font-size: 20rpx;
  color: #999;
}

.reply-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

/* 加载和空状态 */
.loading-tip, .empty-tip {
  text-align: center;
  color: #666;
  padding: 60rpx 0;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  margin: 20rpx 0;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15rpx;
}

.empty-icon {
  font-size: 48rpx;
}
