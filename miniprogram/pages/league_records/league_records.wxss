/* pages/league_records/league_records.wxss */
/* 黑白漫画风格 */

/* 全局背景和字体 */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #fff;
  background-image:
    radial-gradient(circle, rgba(0,0,0,0.1) 1px, transparent 1px);
  background-size: 10px 10px;
  font-family: "Helvetica Neue", Arial, sans-serif;
}

/* 页面标题 */
.page-title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #fff;
  border: 4rpx solid #000;
  box-shadow: 8rpx 8rpx 0 #000;
  text-align: center;
}

.title-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
  filter: grayscale(100%);
}

.page-title text {
  font-size: 40rpx;
  font-weight: 900;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

/* 表单区域 */
.bug-form {
  margin-bottom: 40rpx;
}

.form-section {
  background: #fff;
  border: 4rpx solid #000;
  padding: 30rpx;
  box-shadow: 8rpx 8rpx 0 #000;
}

.form-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  border-bottom: 4rpx dashed #000;
  padding-bottom: 16rpx;
}

.form-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  filter: grayscale(100%);
}

.form-header text {
  font-size: 32rpx;
  font-weight: 700;
  color: #000;
}

.form-group {
  margin-bottom: 20rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #000;
  margin-bottom: 8rpx;
  font-weight: 700;
}

.bug-desc-input {
  width: 100%;
  padding: 16rpx 20rpx;
  border: 4rpx solid #000;
  border-radius: 0;
  font-size: 28rpx;
  background: #fff;
  min-height: 120rpx;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #000;
  margin-top: 4rpx;
  font-weight: 700;
}

.form-actions {
  margin-top: 30rpx;
  text-align: center;
}

.submit-btn {
  background: #000;
  color: #fff;
  border: 4rpx solid #000;
  border-radius: 0;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  font-weight: 900;
  box-shadow: 8rpx 8rpx 0 #000;
  transition: all 0.2s;
}

.submit-btn:active {
  transform: translate(4rpx, 4rpx);
  box-shadow: 4rpx 4rpx 0 #000;
}

.submit-btn:disabled {
  background: #ccc;
  color: #666;
  box-shadow: 8rpx 8rpx 0 #999;
  border-color: #999;
}

/* 历史记录区域 */
.history-section {
  background: #fff;
  border: 4rpx solid #000;
  padding: 30rpx;
  box-shadow: 8rpx 8rpx 0 #000;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 4rpx dashed #000;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  filter: grayscale(100%);
}

.section-header text {
  font-size: 32rpx;
  font-weight: 700;
  color: #000;
}

/* bug列表 */
.bugs-list {
  margin-top: 20rpx;
}

.bug-card {
  background: #fff;
  border: 4rpx solid #000;
  padding: 20rpx;
  margin-bottom: 24rpx;
  position: relative;
}

.bug-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.bug-info {
  flex: 1;
}

.bug-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border: 2rpx solid #000;
  display: inline-block;
  font-weight: 700;
}

.status-open {
  background: repeating-linear-gradient(
    45deg,
    #fff,
    #fff 10px,
    #eee 10px,
    #eee 20px
  );
  color: #000;
}

.status-progress {
  background: #ccc;
  color: #000;
}

.status-resolved {
  background: #000;
  color: #fff;
}

.bug-time {
  font-size: 24rpx;
  color: #000;
  font-weight: 700;
  background: #fff;
  padding: 4rpx 8rpx;
  border: 2rpx solid #000;
}

.bug-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  padding: 16rpx;
  background: #f5f5f5;
  border-top: 2rpx solid #000;
  border-bottom: 2rpx solid #000;
}

/* 加载和空状态 */
.loading-tip, .empty-tip {
  text-align: center;
  padding: 60rpx 0;
  color: #000;
  font-size: 28rpx;
  font-weight: 700;
  border: 4rpx dashed #000;
}

.empty-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
  display: block;
  filter: grayscale(100%);
}

/* 管理员操作区域 */
.admin-actions {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 4rpx dashed #000;
}

.action-buttons {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.action-btn {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border: 2rpx solid #000;
  border-radius: 0;
  min-height: 56rpx;
  line-height: 1.2;
  font-weight: 700;
  background: #fff;
  color: #000;
  transition: all 0.2s;
}

.action-btn:active {
  background: #000;
  color: #fff;
}

.action-btn-delete {
  background: #000;
  color: #fff;
}

.action-btn-delete:active {
  background: #fff;
  color: #000;
}
