.container {
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.header {
  text-align: center;
  padding: 40rpx 0;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
}

.book-info {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 40rpx 0;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.info-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666;
  font-weight: 600;
  min-width: 120rpx;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
}

.value.small {
  font-size: 24rpx;
  color: #999;
}

.add-btn {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
  box-shadow: 0 8rpx 20rpx rgba(245, 87, 108, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx 0;
}

.add-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.tip {
  background: rgba(255, 255, 255, 0.2);
  padding: 30rpx;
  border-radius: 15rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
}

.tip text {
  font-size: 26rpx;
  color: #fff;
  line-height: 1.6;
}
