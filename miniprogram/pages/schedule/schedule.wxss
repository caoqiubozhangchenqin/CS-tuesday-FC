/* pages/schedule/schedule.wxss */
.container {
  padding: 15rpx 8rpx;
  background-color: #f4f4f4;
  min-height: 100vh;
}

.match-card {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 18rpx;
  padding: 20rpx 25rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #888;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee;
}

/* --- 使用 CSS Grid 布局的核心样式 --- */
.card-body {
  display: grid;
  grid-template-columns: 1fr auto 1fr; /* 三列网格：(队名) (比分) (队名) */
  align-items: center;
  padding: 25rpx 0;
}

.team-info {
  font-size: 28rpx;
  font-weight: bold;
}

/* 主客队文字左右对齐，更美观 */
.home-team { text-align: left; }
.away-team { text-align: right; }

.vs {
  font-size: 26rpx;
  color: #aaa;
  margin: 0 15rpx;
}

.score-display {
  font-size: 34rpx;
  font-weight: bold;
  color: #E6393F;
  margin: 0 15rpx;
}
/* --- Grid 布局样式结束 --- */

.card-footer {
  font-size: 22rpx;
  color: #999;
  padding-top: 15rpx;
  border-top: 1rpx solid #eee;
}

.loading-tip, .empty-tip {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
}

/* --- 新增的轮次标题样式 --- */
.round-header {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx 15rpx 10rpx 15rpx;
}