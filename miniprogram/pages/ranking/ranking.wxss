.container {
  padding: 20px;
  background: transparent !important;
}

.title {
  font-size: 24px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20px;
  color: #1a1a1a;
  text-shadow: 0 2px 4px rgba(255, 255, 255, 0.9);
  background-color: rgba(255, 255, 255, 0.75);
  padding: 30rpx;
  border-radius: 16rpx;
}

.ranking-list {
  display: flex;
  flex-direction: column;
}

.ranking-item {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 15px;
  border-radius: 8px;
  margin-bottom: 10px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.12);
}

.rank {
  font-size: 20px;
  font-weight: bold;
  width: 30px;
  text-align: center;
  color: #888;
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin: 0 15px;
}

.player-info {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 16px;
  font-weight: bold;
}

.total-value {
  font-size: 14px;
  color: #07c160;
  margin-top: 5px;
}