/* pages/world_football/world_football.wxss - 历史赛季查询版本 */

/* 全局容器 */
.container {
  min-height: 100vh;
  position: relative;
  padding: 30rpx 20rpx;
  background: transparent !important;
}

.main-container {
  padding-bottom: 100rpx;
  position: relative;
  z-index: 1;
}

/* 页面标题 - 和其他页面一致的样式 */
.page-title {
  font-size: 48rpx;
  font-weight: 900;
  text-align: center;
  margin-bottom: 40rpx;
  color: #fff;
  text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.3);
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.9), rgba(51, 51, 51, 0.85));
  padding: 40rpx;
  border-radius: 30rpx 15rpx 30rpx 15rpx;
  box-shadow: 
    0 12px 24px rgba(0, 0, 0, 0.4),
    0 6px 12px rgba(0, 0, 0, 0.1),
    inset 0 2px 0 rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  border: 4rpx solid #000;
  position: relative;
  overflow: hidden;
}

.title-icon {
  font-size: 52rpx;
  filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
}

/* 联赛标签 */
.league-tabs {
  display: flex;
  gap: 10rpx;
  background: rgba(255, 255, 255, 0.12);
  backdrop-filter: blur(20px);
  border-radius: 20rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

.league-tab {
  flex: 1;
  text-align: center;
  padding: 22rpx 10rpx;
  border-radius: 15rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.league-tab.active {
  background: linear-gradient(135deg, #667eea, #764ba2);
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
}

.league-name {
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.8);
}

.league-tab.active .league-name {
  color: #fff;
  font-weight: bold;
}

/* ===== 赛季选择器 - 页面内嵌下拉样式 ===== */
.season-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 15rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(15rpx);
  border-radius: 16rpx;
  padding: 25rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.12);
}

.season-label {
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.95);
  margin-right: 20rpx;
  white-space: nowrap;
}

.season-dropdown {
  flex: 1;
  max-width: 400rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  padding: 18rpx 30rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #fff;
  box-shadow: 0 6rpx 20rpx rgba(245, 87, 108, 0.4);
  transition: all 0.3s ease;
  cursor: pointer;
}

.season-dropdown:active {
  transform: scale(0.98);
}

.dropdown-value {
  flex: 1;
}

.dropdown-arrow {
  margin-left: 15rpx;
  font-size: 20rpx;
  opacity: 0.8;
  transition: transform 0.3s ease;
}

.dropdown-arrow.expanded {
  transform: rotate(180deg);
}

/* 下拉选项列表 */
.dropdown-options {
  background: rgba(255, 255, 255, 0.18);
  backdrop-filter: blur(20rpx);
  border-radius: 16rpx;
  padding: 10rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
  max-height: 500rpx;
  overflow-y: auto;
  animation: dropdownSlide 0.3s ease;
}

@keyframes dropdownSlide {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.dropdown-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 25rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  transition: all 0.2s ease;
  margin-bottom: 5rpx;
}

.dropdown-option:last-child {
  margin-bottom: 0;
}

.dropdown-option:active {
  background: rgba(255, 255, 255, 0.15);
  transform: scale(0.98);
}

.dropdown-option.selected {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.3), rgba(118, 75, 162, 0.3));
  color: #fff;
  font-weight: 600;
}

.check-icon {
  font-size: 28rpx;
  color: #4ade80;
  font-weight: bold;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

/* 错误提示 */
.error-container {
  text-align: center;
  padding: 100rpx 40rpx;
}

.error-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.error-text {
  display: block;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.retry-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
}

/* 积分榜容器 */
.standings-container {
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(15px);
  border-radius: 20rpx;
  padding: 25rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.12);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 20rpx;
  text-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
}

/* 积分榜表头 */
.standings-header {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.4), rgba(118, 75, 162, 0.4));
  padding: 18rpx 15rpx;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
  font-weight: bold;
  color: #fff;
  font-size: 24rpx;
}

.col-rank {
  width: 80rpx;
  text-align: center;
}

.col-team {
  flex: 1;
  text-align: left;
  padding-left: 10rpx;
}

.col-stat {
  width: 55rpx;
  text-align: center;
}

.col-pts {
  width: 70rpx;
  text-align: center;
}

/* 积分榜数据行 */
.standings-list {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  overflow: hidden;
}

.standing-item {
  display: flex;
  align-items: center;
  padding: 18rpx 15rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  transition: all 0.2s;
  position: relative;
}

.standing-item:last-child {
  border-bottom: none;
}

.standing-item:active {
  background: rgba(255, 255, 255, 0.08);
}

/* 欧冠区 */
.standing-item.champions-league {
  background: linear-gradient(90deg, rgba(67, 97, 238, 0.15), transparent);
  border-left: 4rpx solid #4361ee;
}

/* 欧联区 */
.standing-item.europa-league {
  background: linear-gradient(90deg, rgba(249, 115, 22, 0.15), transparent);
  border-left: 4rpx solid #f97316;
}

/* 降级区 */
.standing-item.relegation {
  background: linear-gradient(90deg, rgba(239, 68, 68, 0.15), transparent);
  border-left: 4rpx solid #ef4444;
}

.rank-badge {
  font-size: 26rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 0.9);
}

.team-name {
  font-size: 26rpx;
  color: #fff;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.standing-item .col-stat {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
}

.stat-won {
  color: #4ade80;
}

.stat-draw {
  color: #fbbf24;
}

.stat-lost {
  color: #f87171;
}

.positive {
  color: #4ade80;
  font-weight: 600;
}

.negative {
  color: #f87171;
  font-weight: 600;
}

.points-badge {
  font-size: 28rpx;
  font-weight: bold;
  color: #fbbf24;
}

/* 图例 */
.legend {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin-top: 25rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.15);
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.legend-color {
  width: 30rpx;
  height: 20rpx;
  border-radius: 4rpx;
}

.champions-league-color {
  background: #4361ee;
}

.europa-league-color {
  background: #f97316;
}

.relegation-color {
  background: #ef4444;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  display: block;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 页脚信息 */
.footer-info {
  text-align: center;
  padding: 30rpx 0;
  margin-top: 40rpx;
}

.info-text {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.8;
}
