/* pages/world_football/world_football.wxss */
.main-container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  text-align: center;
  padding: 40rpx 0 30rpx;
  background: linear-gradient(135deg, rgba(56, 189, 248, 0.15), rgba(139, 92, 246, 0.15));
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10px);
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 联赛标签 */
.league-tabs {
  display: flex;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 15rpx;
  padding: 10rpx;
  margin-bottom: 30rpx;
}

.league-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 10rpx;
  border-radius: 10rpx;
  transition: all 0.3s;
}

.league-tab.active {
  background: linear-gradient(135deg, #667eea, #764ba2);
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
}

.league-name {
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.8);
}

.league-tab.active .league-name {
  color: #fff;
  font-weight: bold;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

/* 错误提示 */
.error-container {
  text-align: center;
  padding: 100rpx 40rpx;
}

.error-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.error-text {
  display: block;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.retry-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
}

/* 功能标签页 */
.function-tabs {
  display: flex;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 15rpx;
  padding: 10rpx;
  margin-bottom: 30rpx;
}

.function-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 10rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  transition: all 0.3s;
}

.function-tab.active {
  background: linear-gradient(135deg, #f093fb, #f5576c);
  color: #fff;
  font-weight: bold;
  box-shadow: 0 4px 12px rgba(245, 87, 108, 0.4);
}

/* 积分榜 */
.standings-container {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
  margin-bottom: 30rpx;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
}

.standings-header {
  display: flex;
  align-items: center;
  padding: 15rpx 10rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 10rpx;
  margin-bottom: 15rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 0.9);
}

.standings-list {
  max-height: 1000rpx;
  overflow-y: auto;
}

.standing-item {
  display: flex;
  align-items: center;
  padding: 20rpx 10rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  transition: all 0.3s;
  border-left: 4rpx solid transparent;
}

.standing-item:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.12);
}

/* 特殊排名颜色 */
.standing-item.champions-league {
  border-left-color: #4ade80;
  background: rgba(74, 222, 128, 0.1);
}

.standing-item.europa-league {
  border-left-color: #fb923c;
  background: rgba(251, 146, 60, 0.1);
}

.standing-item.relegation {
  border-left-color: #ef4444;
  background: rgba(239, 68, 68, 0.1);
}

.col-rank {
  width: 80rpx;
  text-align: center;
  flex-shrink: 0;
}

.rank-badge {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  color: #fff;
  font-weight: bold;
}

.col-team {
  flex: 1;
  padding: 0 15rpx;
  color: #fff;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.col-stat {
  width: 50rpx;
  text-align: center;
  color: rgba(255, 255, 255, 0.8);
  flex-shrink: 0;
}

.stat-won {
  color: #4ade80;
}

.stat-draw {
  color: #fbbf24;
}

.stat-lost {
  color: #f87171;
}

.positive {
  color: #4ade80 !important;
  font-weight: bold;
}

.negative {
  color: #f87171 !important;
  font-weight: bold;
}

.col-pts {
  width: 80rpx;
  text-align: center;
  flex-shrink: 0;
}

.points-badge {
  display: inline-block;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 10rpx;
  font-weight: bold;
  font-size: 26rpx;
}

/* 图例 */
.legend {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1px solid rgba(255, 255, 255, 0.2);
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

.legend-color {
  width: 30rpx;
  height: 20rpx;
  border-radius: 4rpx;
}

.champions-league-color {
  background: #4ade80;
}

.europa-league-color {
  background: #fb923c;
}

.relegation-color {
  background: #ef4444;
}

/* 比赛列表 */
.matches-container,
.upcoming-container {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.matches-list {
  max-height: 1200rpx;
  overflow-y: auto;
}

.match-item {
  background: rgba(255, 255, 255, 0.08);
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s;
}

.match-item:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.12);
}

.match-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.match-round {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  background: rgba(255, 255, 255, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.match-date {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.match-body {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.match-team {
  flex: 1;
  text-align: center;
}

.home-team {
  text-align: right;
}

.away-team {
  text-align: left;
}

.team-name {
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
  display: block;
}

.match-score {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 0 40rpx;
}

.score-num {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  min-width: 60rpx;
  text-align: center;
}

.score-separator {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.5);
}

.vs-badge {
  flex-shrink: 0;
  padding: 0 40rpx;
}

.vs-text {
  display: inline-block;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  background: linear-gradient(135deg, #f093fb, #f5576c);
  padding: 15rpx 30rpx;
  border-radius: 10rpx;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
}

.upcoming-item {
  border: 2px solid rgba(245, 87, 108, 0.3);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  display: block;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  display: block;
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
}

/* 底部信息 */
.footer-info {
  text-align: center;
  padding: 30rpx 0;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  margin-top: 30rpx;
}

.info-text {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
  margin: 5rpx 0;
}
