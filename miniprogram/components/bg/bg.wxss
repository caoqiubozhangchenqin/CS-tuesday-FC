.bg-wrapper {
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  z-index: 0; /* 让背景处于页面底层 */
  pointer-events: none; /* 不阻塞页面交互 */
  overflow: hidden;
}
.bg-image {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-repeat: repeat; /* 当图片不够长时平铺 */
  background-position: left top;
  background-size: auto; /* 可改为 cover/contain 或具体值 */
}
.bg-overlay {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0); /* 默认透明，可通过 overlayOpacity 属性调整 */
  pointer-events: none;
}


