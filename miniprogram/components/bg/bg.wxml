<view class="bg-wrapper" wx:if="{{bgUrl}}">
  <view class="bg-image" style="background-image: url('{{bgUrl}}'); filter: blur({{blur}}px); background-size: {{sizeMode}}; background-repeat: {{repeat ? 'repeat' : 'no-repeat'}};"></view>
  <view class="bg-overlay" style="background: rgba(0,0,0,{{overlayOpacity}});"></view>
  <!-- 使用 background-repeat: repeat 在 wxss 中控制平铺 -->
</view>
