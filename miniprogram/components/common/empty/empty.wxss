/* components/common/empty/empty.wxss */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-icon {
  margin-bottom: 32rpx;
}

.default-icon {
  font-size: 120rpx;
  color: #ccc;
  display: block;
}

.empty-content {
  margin-bottom: 40rpx;
}

.empty-title {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.empty-description {
  display: block;
  font-size: 28rpx;
  color: #999;
  line-height: 1.5;
  max-width: 500rpx;
}

.empty-actions {
  margin-top: 16rpx;
}

.empty-action-btn {
  background: linear-gradient(135deg, #007aff 0%, #0056cc 100%);
  color: #fff;
  border: none;
  border-radius: 20rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
  transition: all 0.3s ease;
}

.empty-action-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.4);
}

/* 紧凑模式 */
.empty-container.compact {
  padding: 60rpx 30rpx;
}

.empty-container.compact .empty-icon {
  margin-bottom: 24rpx;
}

.empty-container.compact .empty-content {
  margin-bottom: 32rpx;
}

.empty-container.compact .empty-title {
  font-size: 28rpx;
}

.empty-container.compact .empty-description {
  font-size: 26rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .empty-container {
    padding: 60rpx 30rpx;
  }

  .default-icon {
    font-size: 100rpx;
  }

  .empty-title {
    font-size: 28rpx;
  }

  .empty-description {
    font-size: 26rpx;
  }

  .empty-action-btn {
    padding: 16rpx 32rpx;
    font-size: 26rpx;
  }
}