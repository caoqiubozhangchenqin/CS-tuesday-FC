/* components/common/card/card.wxss */
.card {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.card-shadow {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.card:active {
  transform: scale(0.98);
}

/* 卡片类型变体 */
.card-primary {
  border-left: 4rpx solid #007aff;
}

.card-success {
  border-left: 4rpx solid #28a745;
}

.card-warning {
  border-left: 4rpx solid #ffc107;
}

.card-danger {
  border-left: 4rpx solid #dc3545;
}

.card-info {
  border-left: 4rpx solid #17a2b8;
}

/* 卡片头部 */
.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
}

.card-title-section {
  flex: 1;
}

.card-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.card-subtitle {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.3;
}

.card-extra {
  margin-left: 16rpx;
}

/* 卡片内容 */
.card-content {
  padding: 32rpx;
  color: #333;
  line-height: 1.6;
}

/* 卡片底部 */
.card-footer {
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #f0f0f0;
  background: #fafafa;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 悬停效果 */
.card:hover {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .card-header,
  .card-content,
  .card-footer {
    padding-left: 24rpx;
    padding-right: 24rpx;
  }

  .card-title {
    font-size: 28rpx;
  }

  .card-subtitle {
    font-size: 24rpx;
  }
}